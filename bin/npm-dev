#!/bin/sh
export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin
echo "Current working directory: '"$(pwd)"'"
docker run -d -v $(pwd):/src -w /src -v ~/.git-credentials:/root/.git-credentials -v ~/.gitconfig:/root/.gitconfig -v ~/.ssh:/root/.ssh -p 9000:9000 roneichiarandi/alpine-node npm $*
