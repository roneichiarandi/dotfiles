#!/bin/sh
export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin
echo "Current working directory: '"$(pwd)"'"
docker run --rm -v $(pwd):/app -e "GOPATH=/app" -e "GOOS=darwin" -w /app -v ~/.git-credentials:/root/.git-credentials -v ~/.gitconfig:/root/.gitconfig -v ~/.ssh:/root/.ssh golang:alpine go $*

# GOOS=darwin for works on mac"
