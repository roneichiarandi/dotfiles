#!/bin/bash

export XDG_RUNTIME_DIR=/run/user/$(id -u)

RAZER_BLACKSHARK_V2_PRO=alsa_input.usb-Razer_Razer_BlackShark_V2_Pro-00.mono-fallback
FIFINE=alsa_input.usb-MV-SILICON_fifine_Microphone_20190808-00.iec958-stereo

SELECTED=$FIFINE

MIC_SOURCE=$(echo $(/usr/bin/pactl get-default-source))

if [ "$MIC_SOURCE" != "$SELECTED" ]; then
    /usr/bin/pactl set-default-source $SELECTED
fi

exit 1
