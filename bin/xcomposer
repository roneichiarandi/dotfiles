#!/bin/sh
export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin
echo "Current working directory: '"$(pwd)"'"
docker run --rm -v $(pwd):/app -w /app -v ~/.git-credentials:/root/.git-credentials -v ~/.gitconfig:/root/.gitconfig -v ~/.ssh:/root/.ssh roneichiarandi/composer "composer $*"
